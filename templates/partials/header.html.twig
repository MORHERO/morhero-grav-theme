{% set header_media_path = header.master.media|first.path %}
<div class="flex">
	<div class="element">
		<div class="inner">
			<div class="glitch-text-container">
				<p class="glitch-headline master" data-text="{{ page.header.master.text.top|raw }}">{{ page.header.master.text.top|raw }}</p>
				<p class="glitch-headline" data-text="{{ page.header.master.text.center|raw }}">{{ page.header.master.text.center|raw }}</p>
				<p class="glitch-headline underline" data-text="{{ page.header.master.text.bottom|raw }}">{{ page.header.master.text.bottom|raw }}</p>
			</div>
		</div>
	</div>
	<div class="element">
		<div class="inner flex">
			<div class="glitch-image-container">
				<img class="canvas" src="{{ url(header_media_path) }}">
				<canvas></canvas>
			</div>
		</div>
	</div>
</div>